{
  "manifest_version": 3,
  "name": "Glossarly",
  "version": "1.0.0",
  "description": "Highlight and define business terms in web documents",
  "permissions": ["storage", "activeTab", "scripting", "identity"],
  "host_permissions": [
    "https://docs.google.com/*",
    "https://docs.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "278798043917-cb5rpqnf5prd447r7hdhlakohru17ci2.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/documents.readonly"]
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/favicon-16x16.png",
      "48": "icons/favicon-48x48.png",
      "128": "icons/favicon-128x128.png"
    }
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://docs.google.com/document/*"],
      "run_at": "document_start",
      "js": ["src/gdocs-enable-annotated-canvas.js"],
      "world": "MAIN"
    },
    {
      "matches": ["*://docs.google.com/document/*"],
      "js": ["src/utils/logger.js", "src/gdocs.js"],
      "css": ["styles/content.css"],
      "all_Frames": false,
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/favicon-16x16.png",
    "48": "icons/favicon-48x48.png",
    "128": "icons/favicon-128x128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
